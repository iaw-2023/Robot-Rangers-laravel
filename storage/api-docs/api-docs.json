            "post": {
                "tags": [
                    "Pedidos"
                ],
                "summary": "Crea un pedido.",
                "description": "Permite crear un pedido con la información del cliente, el monto y las prendas.",
                "operationId": "21d79c1fd1100d09ceffb3c50ade91cb",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "mail_cliente",
                                    "monto",
                                    "prendas"
                                ],
                                "properties": {
                                    "mail_cliente": {
                                        "description": "El correo electrónico del cliente.",
                                        "type": "string",
                                        "example": "cliente@iaw2023.com"
                                    },
                                    "monto": {
                                        "description": "El monto total del pedido.",
                                        "type": "string",
                                        "example": "9999.99"
                                    },
                                    "prendas": {
                                        "description": "Un arreglo de prendas que contiene el id y cantidad de cada prenda del pedido.",
                                        "type": "array",
                                        "items": {
                                            "required": [
                                                "id",
                                                "cantidad"
                                            ],
                                            "properties": {
                                                "id": {
                                                    "description": "El id de la prenda.",
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "cantidad": {
                                                    "description": "La cantidad de la prenda.",
                                                    "type": "integer",
                                                    "example": 4
                                                }
                                            },
                                            "type": "object"
                                        }
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "CREATED",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "description": "El id del pedido.",
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "created_at": {
                                            "description": "La fecha y hora de creación del pedido.",
                                            "type": "string",
                                            "example": "2023-05-07 00:00:00"
                                        },
                                        "updated_at": {
                                            "description": "La fecha y hora de actualización del pedido.",
                                            "type": "string",
                                            "example": "2023-05-07 00:00:00"
                                        },
                                        "mail_cliente": {
                                            "description": "El correo electrónico del cliente.",
                                            "type": "string",
                                            "example": "cliente@iaw2023.com"
                                        },
                                        "monto": {
                                            "description": "El monto total del pedido.",
                                            "type": "number",
                                            "example": 9999.99
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "UNPROCESSABLE CONTENT",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "description": "El mensaje de error.",
                                            "type": "string",
                                            "example": "La informacion ingresada es invalida."
